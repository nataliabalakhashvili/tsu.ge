.main-btn
    color black
    font-size 19px
    font-weight bold
    background orange
    display inline-block
    padding 12px 35px 6px
    margin-top 8px
    position relative
    overflow hidden
    transition 0.5s
    span
        display block
        background white
        transition 0.2s
        z-index 1
        &:nth-child(1),
        &:nth-child(3)
            position absolute
            width 100%
            height 2px
        &:nth-child(2),
        &:nth-child(4)
            position absolute
            width 2px
            height 100%
        &:nth-child(1)
            top 0
            left -100%
            transition-delay 0s
        &:nth-child(2)
            top -100%
            right 0
            transition-delay 0.2s
        &:nth-child(3)
            bottom 0
            right -100%
            transition-delay 0.4s
        &:nth-child(4)
            bottom -100%
            left 0
            transition-delay 0.6s
    &:hover
        background transparent
        color white
        span
            &:nth-child(1)
                top 0
                left 0
            &:nth-child(2)
                top 0
                right 0
            &:nth-child(3)
                bottom 0
                right 0
            &:nth-child(4)
                bottom 0
                left 0
    
